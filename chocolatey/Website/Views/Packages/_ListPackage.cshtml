@model ListPackageItemViewModel
@using NuGetGallery
@{
    var isSubmitted = Model.Status == PackageStatusType.Submitted;

    var submittedStatus = Model.SubmittedStatus;
    var packageImage = Url.ImageUrl(Model.Id, Model.Version, Model.IconUrl);
    var gridView = Request.Cookies["preferenceGridView"] != null;
    var copyId = "id-" + @Model.Id.ToLower().Replace(".", "") + "-" + @Model.Version.Replace(".", "");
}

<div class="@if (gridView){<text>card-body pb-2</text>}">
    <div class="d-flex">
        <div class="mx-auto package-image-header">
            <a href="@Url.Package(Model.Id, Model.UseVersion ? Model.Version : null)" title="Learn more about @Model.Title" aria-label="Learn more about @Model.Title">
                <img class="align-self-start img-fluid" src="@(Url.Content(packageImage ?? @Links.Content.Images.packageDefaultIcon_50x50_png))" alt="@Model.Id icon" onerror="this.src='@Links.Content.Images.packageDefaultIcon_50x50_png';">
            </a>
        </div>
        <div class="flex-fill ms-3">
            @*Title and Type*@
            <div class="d-flex @if(!gridView){<text>align-items-sm-center</text>}">
                <div class="d-flex mt-1 @if(!gridView){<text>mt-sm-0</text>}">
                    <a class="status status-sm @if(Model.PackageTestResultsStatus == PackageAutomatedReviewResultStatusType.Passing){<text>bg-success</text>}else if(Model.PackageTestResultsStatus == PackageAutomatedReviewResultStatusType.Failing){<text>bg-danger</text>}else if(Model.PackageTestResultsStatus == PackageAutomatedReviewResultStatusType.Pending){<text>bg-warning</text>}else if(Model.PackageTestResultsStatus == PackageAutomatedReviewResultStatusType.Exempted || Model.PackageTestResultsStatus == PackageAutomatedReviewResultStatusType.Unknown){<text>bg-secondary</text>}" href="@Url.Package(Model.Id, Model.UseVersion ? Model.Version : null)#status" title="Click to view test results">
                        <span class="@Model.PackageValidationResultStatus"></span>
                    	<span class="@Model.PackageTestResultsStatus"></span>
                    </a>
                </div>
                <a class="h5 fw-bold mb-0 btn-link text-break text-reset" href="@Url.Package(Model.Id, Model.UseVersion ? Model.Version : null)" title="Learn more about @Model.Title" aria-label="Learn more about @Model.Title">@Model.Title <span class="@if(gridView){<text>d-block small</text>}">@Model.Version</span></a>
            </div>
            @*Badges*@
            <div class="mt-2 d-flex align-items-center flex-wrap">
                <span class="badge rounded-pill bg-outline-primary text-primary me-1 mb-1">@Model.TotalDownloadCount.ToString("n0") @if(Model.TotalDownloadCount != 1){<text> Downloads</text>}else{<text> Download</text>}</span>
                @if (Model.IsOwner(User))
                {
                    <span class="badge rounded-pill bg-theme-light-2 text-theme border me-1 mb-1"><span class="fas fa-star text-warning small"></span> My Package</span>
                }
                @if (Model.Status == PackageStatusType.Unknown)
                {
                    <span class="badge rounded-pill bg-secondary me-1 mb-1">Unknown Status</span>
                }
                @if (isSubmitted)
                {
                    switch (submittedStatus)
                    {
                        case PackageSubmittedStatusType.Pending:
                            <span class="badge rounded-pill bg-warning text-dark mb-1">Pending Automated Review</span>
                            break;
                        case PackageSubmittedStatusType.Ready:
                            <span class="badge rounded-pill bg-success mb-1">Ready</span>
                            break;
                        case PackageSubmittedStatusType.Updated:
                            <span class="badge rounded-pill bg-orange text-dark me-1 mb-1">Updated</span>
                            @ViewHelpers.OwnersGravatarListPackages(Model.Owners, 25, Url)
                            break;
                        case PackageSubmittedStatusType.Responded:
                            <span class="badge rounded-pill bg-purple me-1 mb-1">Responded</span>
                            @ViewHelpers.OwnersGravatarListPackages(Model.Owners, 25, Url)
                            break;
                        default:
                            <span class="badge rounded-pill bg-danger me-1 mb-1">Waiting for Maintainer</span>
                            if (!string.IsNullOrWhiteSpace(Model.ReviewerEmailAddress))
                            {
                                <a href="@Url.Action(MVC.Users.Profiles(Model.ReviewerUserName))">@ViewHelpers.GravatarImage(Model.ReviewerEmailAddress, Model.ReviewerUserName, 25)</a>
                            }
                            break;
                    }
                }
            </div>
        </div>
    </div>
    @*Summary*@
    @if (!isSubmitted)
    {
        <p class="mt-2 mb-0 package-list-align">
            @if (String.IsNullOrEmpty(Model.Summary) || Model.Summary.Length < 138)
            {
                @Model.Summary
            }
            else
            {
                @Model.Summary.Substring(0, 138)<text>... </text><a class="fw-normal" href="@Url.Package(Model.Id, Model.UseVersion ? Model.Version : null)" aria-label="Continue reading about @Model.Title">Keep Reading</a>
            }
        </p>
    }
</div>
<div class="@if (!gridView){<text>row mt-2 package-list-align</text>}else{<text>card-footer bg-theme-light pt-0</text>}">
    <div class="@if(!gridView && !isSubmitted){<text>col-lg-6</text>}else if(!gridView && isSubmitted){<text>col-12</text>}">
        @*Package By*@
        <ul class="list-unstyled list-inline mb-0 small">
            <li class="list-inline-item me-0"><strong>By: </strong></li>
            @foreach (var owner in Model.Owners)
            {
                <li class="list-inline-item me-1"><a href="@Url.Action(MVC.Users.Profiles(owner.Username))" title="@owner.Username">@owner.Username</a></li>
            }
            @if (isSubmitted)
            {
                <li class="list-inline-item me-1"><strong>Published: </strong>@Model.PublishedDate.ToString("dd MMM yyyy")</li>
                if (Model.ReviewedDate.HasValue)
                {
                    <li class="list-inline-item me-0"><strong>Reviewed: </strong>@Model.ReviewedDate.GetValueOrDefault().ToString("dd MMM yyyy") @if(!string.IsNullOrWhiteSpace(Model.ReviewerUserName)){<text> by <a href="@Url.Action(MVC.Users.Profiles(Model.ReviewerUserName))">@Model.ReviewerUserName</a></text>}</li>
                }
            }
        </ul>
        @*Tags*@
        @if (@Model.Tags.AnySafe())
        {
            <ul class="list-unstyled list-inline mb-0 small">
                <li class="list-inline-item me-0"><strong>Tags: </strong></li>
                @foreach (var tag in Model.Tags)
                {
                    <li class="list-inline-item me-1"><a href="@Url.Search("tag:" + tag)" title="Search for @tag">@tag</a></li>
                }
            </ul>
        }
    </div>
    <div class="mt-2 @if(!gridView && !isSubmitted){<text>col-lg-6 mt-lg-0</text>}else if(!gridView && isSubmitted){<text>d-none</text>}">
        @*Command*@
        @if (Model.Title != "Chocolatey" && !isSubmitted)
        {
            <div class="input-group">
                <span class="input-group-text bg-theme-light text-theme pe-0">></span>
                <input type="text" id="@copyId" class="form-control bg-theme-light user-select-all border-start-0 ps-1" aria-label="Install @Model.Title command" value="choco install @Model.Id.ToLower() @if ((!Model.LatestVersion && !Model.LatestStableVersion) || !Model.Listed) {<text> --version @Model.Version</text>} @if (Model.Prerelease) {<text> --pre </text>}" readonly>
                <button data-clipboard-target="#@copyId" class="btn btn-primary btn-copy tt tt-top" type="button" data-bs-toggle="button" data-tooltip-text="Copy" data-tooltip-text-active="Copied!"><i class="fas fa-clipboard" aria-hidden="true"></i></button>
            </div>
        }
        else if (Model.Title == "Chocolatey")
        {
            <div class="text-end">
                <a class="btn btn-primary" href="@Url.RouteUrl(RouteName.Install)" title="Learn how to install @Model.Title" aria-label="Learn how to install @Model.Title">Install Now</a>
            </div>
        }
    </div>
</div>
@if (!gridView)
{
    <hr />
}