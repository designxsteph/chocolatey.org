@model IEnumerable<EventViewModel>
@{
    ViewBag.Title = "Webinar: Enable Your Remote Workforce by Implementing Modern Infrastructure with Chocolatey";
    Bundles.Reference("content/css/chocolatey.bundle.min.css");
    Bundles.Reference("Scripts/main");
    Bundles.Reference("Scripts/events");

    var description = "Deploying software to remote desktop and endpoint devices is not always easy, especially in highly regulated and locked down environments. This can be even more challenging if your IT team is overworked, and you need to ensure your users are productive with no vulnerabilities.";
}
@section ExtraHeaders {
    <meta property="og:description" content="@description" />
    <meta property="description" content="@description" />
}
@foreach (var post in @Model)
{
    if (post.Title.Equals("Enable Your Remote Workforce by Implementing Modern Infrastructure with Chocolatey"))
    {
        @* Used by JS to configure countdown clock *@
        <div>
            <input class="countdown-date-time" type="hidden" value="@post.EventDate.GetValueOrDefault().ToString("yyyy/MM/dd HH:mm:ss") UTC" />
        </div>

        <div id="countdown-header" class="bg-primary-900 text-center countdown-single-event">
            <section class="pt-3 pt-lg-5 pb-5">
                <div class="container-fluid pt-lg-3">
                    <h4 class="mb-0 text-muted-dark">WEBINAR</h4>
                    <h1 class="mb-0 display-4">Enable Your Remote Workforce by Implementing <br class="d-none d-md-block" />Modern Infrastructure with Chocolatey</h1>
                    <hr class="mt-3 mb-4 mb-md-5 border-hr-lg">
                    <h5 class="countdown-date">
                        <span class="me-md-4 mb-3 mb-md-0 d-inline-block"><i class="fas fa-calendar"></i> @post.EventDate.GetValueOrDefault().ToString("dddd, %d MMMM yyyy")</span>
                        <br class="d-md-none" />
                        <span><i class="fas fa-clock"></i> @post.Time</span>
                    </h5>
                    <a href="@post.RegisterLink" target="_blank" rel="noreferrer" class="btn btn-success btn-lg my-4 mb-md-5">Reserve My Spot Now</a>
                </div>
            </section>
            <div class="position-relative"><div class="countdown-container countdown-container-blocks countdown-container-absolute-center"></div></div>
            <div class="curve curve-bottom curve-bg-theme"></div>
        </div>
        <section class="pb-3 pt-lg-3 pb-lg-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <h3>Overview</h3>
                        @Html.Raw(post.Post)
                        <a href="@post.RegisterLink" target="_blank" rel="noreferrer" class="btn btn-lg btn-success d-sm-none">Reserve My Spot Now</a>
                        <div class="countdown-details">
                            <hr class="my-4 d-sm-none" />
                            <h3 class="mt-sm-4">Event Details</h3>
                            <div class="row align-items-center">
                                <div class="d-none d-sm-block col-sm-4 col-md-3">
                                    <div class="calendar-date">
                                        <div>@post.EventDate.GetValueOrDefault().ToString("MMMM")</div>
                                        <div>@post.EventDate.GetValueOrDefault().ToString("%d")</div>
                                    </div>
                                </div>
                                <div class="col-sm-8 col-md-9">
                                    <ul class="list-unstyled mb-0 h5">
                                        <li class="mb-2"><strong>Title: </strong>@post.Title</li>
                                        <li class="mb-2"><strong>Date: </strong>@post.EventDate.GetValueOrDefault().ToString("dddd, %d MMMM yyyy")</li>
                                        <li class="mb-2"><strong>Time: </strong>@post.Time<br /><small><a href="https://everytimezone.com/s/5b697026" target="_blank" rel="noreferrer">Convert to your time zone<i class="fas fa-angle-right"></i></a></small></li>
                                        <li><strong>Duration: </strong>@post.Duration</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 mt-sm-4 mt-lg-0">
                        <hr class="my-4 d-sm-none" />
                        <h3>Speakers:</h3>
                        <div class="mb-4">
                            <div class="d-flex mb-2 align-items-center">
                                <div class="me-3">
                                    <img class="rounded shadow" width="75" src="@Url.Content("~/content/images/speakers/paul-broadwith.jpg")" alt="Paul Broadwith" title="Paul Broadwith" />
                                </div>
                                <div>
                                    <h5 class="fw-bold text-primary mb-0">Paul Broadwith</h5>
                                    <p class="mb-0"><strong>Senior Technical Engineer at Chocolatey</strong></p>
                                </div>
                            </div>
                            <p class="mb-2">Paul Broadwith of Glasgow Scotland has 25+ years in IT in financial, government, manufacturing and services sectors. He is the Lead Engineer on Boxstarter and cChoco DSC Resource.</p>
                            <div class="d-flex">
                                <a class="btn btn-sm bg-linkedin text-white me-2" href="https://www.linkedin.com/in/paulbroadwith" target="_blank" rel="noreferrer" title="View more about Paul Broadwith on LinkedIn">Linked <i class="fab fa-linkedin"></i></a>
                                <a class="btn btn-sm bg-twitter  text-white" href="https://twitter.com/pauby" target="_blank" rel="noreferrer" title="View more about Paul Broadwith on Twitter"><i class="fab fa-twitter"></i> Twitter</a>
                            </div>
                        </div>
                        <div>
                            <div class="d-flex mb-2 align-items-center">
                                <div class="me-3">
                                    <img class="rounded shadow" width="75" src="@Url.Content("~/content/images/speakers/rob-reynolds.jpg")" alt="Rob Reynolds" title="Rob Reynolds" />
                                </div>
                                <div>
                                    <h5 class="fw-bold text-primary mb-0">Rob Reynolds</h5>
                                    <p class="mb-0"><strong>Chocolatey Founder</strong></p>
                                </div>
                            </div>
                            <p class="mb-2">Rob is a developer turned founder with 14+ years experience in infrastructure automation and modern automation approaches. He excels in taking hard concepts and making them approachable and easy.</p>
                            <div class="d-flex">
                                <a class="btn btn-sm bg-linkedin text-white me-2" href="https://www.linkedin.com/in/robreynolds" target="_blank" rel="noreferrer" title="View more about Rob Reynolds on LinkedIn">Linked <i class="fab fa-linkedin"></i></a>
                                <a class="btn btn-sm bg-twitter  text-white" href="https://twitter.com/ferventcoder" target="_blank" rel="noreferrer" title="View more about Rob Reynolds on Twitter"><i class="fab fa-twitter"></i> Twitter</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="py-3 py-lg-5 bg-theme-primary">
            <div class="container text-center">
                <h2>@post.Tagline</h2>
                <h3 class="mb-3">Spots Are Limited. Secure Your Spot Today!</h3>
                <a href="@post.RegisterLink" target="_blank" rel="noreferrer" class="btn btn-lg btn-theme">Reserve My Spot Now</a>
            </div>
        </section>
    }
}