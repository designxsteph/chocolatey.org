@model IEnumerable<EventViewModel>
@{
    ViewBag.Title = "Example Event";
    Bundles.Reference("content/css/chocolatey.slim.css");
    Bundles.Reference("Scripts");
    Bundles.Reference("Scripts/jquery-countdown");

    var description = "This description is what shows up when this url is shared via social media and used for website SEO.";
}
@section ExtraHeaders {
    <meta property="og:description" content="@description" />
    <meta property="description" content="@description" />
}
@foreach (var post in @Model)
{
    if (post.Title.Equals("Example Event"))
    {
        @* Used by JS to configure countdown clock *@
        <input class="date" type="hidden" value="@post.EventDate.GetValueOrDefault().ToString("yyyy/MM/dd")" />
        <input class="hour" type="hidden" value="@post.EventDate.GetValueOrDefault().ToString("HH")" />
        <input class="minutes" type="hidden" value="@post.EventDate.GetValueOrDefault().ToString("mm")" />

        <div id="countdown-header" class="bg-dark text-white border-top-dark text-center">
            <section class="pt-3 pt-lg-5 pb-5">
                <div class="container-fluid pt-lg-3">
                    <h4 class="mb-0 text-muted-dark">WEBINAR</h4>
                    <h1 class="mb-0 display-4">Example <br class="d-none d-md-block" />Title</h1>
                    <hr class="mt-3 mb-4 mb-md-5 border-hr-lg">
                    <h5 class="countdown-date">
                        <span class="mr-md-4 mb-3 mb-md-0 d-inline-block"><i class="fas fa-calendar"></i> @post.EventDate.GetValueOrDefault().ToString("dddd, %d MMMM yyyy")</span>
                        <br class="d-md-none" />
                        <span><i class="fas fa-clock"></i> @post.Time</span>
                    </h5>
                    <a href="@post.RegisterLink" target="_blank" rel="noreferrer" class="btn btn-success btn-lg my-4 mb-md-5"><span class="h2 font-weight-bold">Reserve My Spot Now</span></a>
                </div>
            </section>
            <div class="position-relative"><div class="countdown-container countdown-container-blocks countdown-container-absolute-center"></div></div>
            <div class="shape-border shape-border-bottom"></div>
        </div>
        <section class="pb-3 pt-lg-3 pb-lg-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <h3>Overview</h3>
                        @Html.Raw(post.Post)
                        <a href="@post.RegisterLink" target="_blank" rel="noreferrer" class="btn btn-lg btn-success d-sm-none">Reserve My Spot Now</a>
                        <div class="countdown-details">
                            <hr class="my-4 d-sm-none" />
                            <h3 class="mt-sm-4">Event Details</h3>
                            <div class="row align-items-center">
                                <div class="d-none d-sm-block col-sm-4 col-md-3">
                                    <div class="calendar-date">
                                        <div>@post.EventDate.GetValueOrDefault().ToString("MMMM")</div>
                                        <div>@post.EventDate.GetValueOrDefault().ToString("%d")</div>
                                    </div>
                                </div>
                                <div class="col-sm-8 col-md-9">
                                    <ul class="list-unstyled mb-0 h5">
                                        <li class="mb-2"><strong>Title: </strong>@post.Title</li>
                                        <li class="mb-2"><strong>Date: </strong>@post.EventDate.GetValueOrDefault().ToString("dddd, %d MMMM yyyy")</li>
                                        <li class="mb-2"><strong>Time: </strong>@post.Time<br /><small><a href="https://everytimezone.com/s/5b697026" target="_blank" rel="noreferrer">Convert to your time zone<i class="fas fa-angle-right"></i></a></small></li>
                                        <li><strong>Duration: </strong>@post.Duration</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 mt-sm-4 mt-lg-0">
                        <hr class="my-4 d-sm-none" />
                        <h3>Speakers:</h3>
                        <div class="event-speaker">
                            <div class="d-flex mb-2 align-items-center">
                                <div class="mr-3">
                                    <img class="rounded shadow" width="75" src="@Url.Content("~/content/images/speakers/default-speaker.jpg")" alt="Jane Doe" title="Jane Doe" />
                                </div>
                                <div>
                                    <h5 class="font-weight-bold text-primary mb-0">Jane Doe</h5>
                                    <p class="mb-0"><strong>Position at Company</strong></p>
                                </div>
                            </div>
                            <p class="mb-2">Here is a really short bio on Jane Doe. Make this no more than 3 sentences. Remove if needed.</p>
                            <div class="d-flex">
                                <a class="btn btn-sm btn-secondary btn-linkedin mr-2" href="#" target="_blank" rel="noreferrer" title="LinkedIn">Linked <i class="fab fa-linkedin"></i></a>
                                <a class="btn btn-sm btn-secondary btn-twitter" href="#" target="_blank" rel="noreferrer" title="Twitter"><i class="fab fa-twitter"></i> Twitter</a>
                            </div>
                        </div>
                        <div class="event-speaker">
                            <div class="d-flex mb-2 align-items-center">
                                <div class="mr-3">
                                    <img class="rounded shadow" width="75" src="@Url.Content("~/content/images/speakers/default-speaker.jpg")" alt="John Doe" title="John Doe" />
                                </div>
                                <div>
                                    <h5 class="font-weight-bold text-primary mb-0">John Doe</h5>
                                    <p class="mb-0"><strong>Position at Company</strong></p>
                                </div>
                            </div>
                            <p class="mb-2">Here is a really short bio on Jane Doe. Make this no more than 3 sentences. Remove if needed.</p>
                            <div class="d-flex">
                                <a class="btn btn-sm btn-secondary btn-linkedin mr-2" href="#" target="_blank" rel="noreferrer" title="LinkedIn">Linked <i class="fab fa-linkedin"></i></a>
                                <a class="btn btn-sm btn-secondary btn-twitter" href="#" target="_blank" rel="noreferrer" title="Twitter"><i class="fab fa-twitter"></i> Twitter</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="py-3 py-lg-5 bg-primary">
            <div class="container text-center">
                <h2>@post.Tagline</h2>
                <h3 class="mb-3">Spots Are Limited. Secure Your Spot Today!</h3>
                <a href="@post.RegisterLink" target="_blank" rel="noreferrer" class="btn btn-lg btn-light">Reserve My Spot Now</a>
            </div>
        </section>
    }
}