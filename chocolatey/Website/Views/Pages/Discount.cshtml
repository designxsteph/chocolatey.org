@using NuGetGallery
@model DiscountViewModel
@{
    ViewBag.Title = "Student Discount";
    Bundles.Reference("content/css/chocolatey.bundle.min.css");
    Bundles.Reference("Scripts/main");
    Bundles.Reference("Scripts/validation");
}
@section TopScripts {
    <script>
        function onSubmit(token) {
            document.getElementById("i-recaptcha").submit();
        }
    </script>
    <script src='https://www.google.com/recaptcha/api.js' async defer></script>
}

<section>
    <div class="container py-3 py-lg-5">
        <div class="row">
            <div class="col-xl-6 mx-auto">
                <h2 class="text-primary">Chocolatey Software Student Discount</h2>
                <h4>Please provide the information below and we'll reach out as soon as possible.</h4>
                @using (Html.BeginForm("Discount", "Pages", FormMethod.Post, new { id = "i-recaptcha" }))
                {
                    <fieldset class="form">
                        <legend class="d-none">Student Discount</legend>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="d-none">
                            @Html.DropDownListFor(m => m.DiscountType, Model.DiscountTypeItems, new { Value = "StudentDiscount", @class = "form-select" })
                        </div>
                        <div class="mt-3">
                            @Html.LabelFor(m => m.FirstName) <span class="fas fa-asterisk text-primary small"></span>
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control mt-2" })
                            @Html.ValidationMessageFor(m => m.FirstName)
                        </div>
                        <div class="mt-3">
                            @Html.LabelFor(m => m.LastName) <span class="fas fa-asterisk text-primary small"></span>
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control mt-2" })
                            @Html.ValidationMessageFor(m => m.LastName)
                        </div>
                        <div class="mt-3">
                            @Html.LabelFor(m => m.Email) <span class="fas fa-asterisk text-primary small"></span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control mt-2" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                        @if(ViewData.ModelState["SpamValidationResponse"] != null)
                        {
                            <ul class="list-unstyled callout callout-danger shadow-none mt-3">
                                <li><strong>reCAPTCHA Error(s):</strong></li>
                                @foreach(var error in ViewData.ModelState["SpamValidationResponse"].Errors)
                                {
                                    <li>@Html.Raw(error.ErrorMessage)</li>
                                }
                            </ul>
                        }
                        <p class="mb-0 mt-3"><small>Fields marked with</small> <span class="fas fa-asterisk text-primary small"></span> <small>are required.</small></p>
                        <input class="btn btn-primary mt-3 g-recaptcha" data-sitekey="@System.Configuration.ConfigurationManager.AppSettings["reCAPTCHA::PublicKey"]" data-callback="onSubmit" data-badge="bottomleft" data-action="Form_Discount" type="submit" value="Send" title="Send us a message. We'll be in touch soon!" />
                    </fieldset>
                }
            </div>
        </div>
    </div>
</section>