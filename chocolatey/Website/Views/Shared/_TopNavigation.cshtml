            </button>
            @if (Request.RawUrl == Url.RouteUrl(RouteName.Home) || @FullHref.Contains("/docs"))
            {
                <div class="nav-search d-lg-none">
                    @Html.Partial("~/Views/Shared/_SearchBox.cshtml")
