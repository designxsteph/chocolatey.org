@{
    Layout = "_BaseLayout.cshtml";
}
@section css
{
    @RenderSection("css", required: false)
}
@section ExtraHeaders
{
    @RenderSection("ExtraHeaders", required: false)
}
@section TopScripts
{
    @RenderSection("TopScripts", required: false)
}

<body class="chocolatey-org">
    @Html.Partial("~/Views/Shared/_TopNavigation.cshtml")
    <main class="mb-auto">
        @Html.Partial("~/Views/Shared/_Modals.cshtml")
        @RenderBody()
    </main>
    <footer class="flex-shrink-0">
        @Html.Partial("~/Views/Shared/_NewsletterNavigation.cshtml")
        @Html.Partial("~/Views/Shared/_BottomNavigation.cshtml")
        @Html.Partial("~/Views/Shared/_CopyrightNavigation.cshtml")
        @Html.Partial("~/Views/Shared/_CookiePolicy.cshtml")
    </footer>
    @RenderPage("_CookiePolicy.cshtml")

    @Bundles.RenderStylesheets("bottom")
    <script type="text/javascript" src="https://polyfill.io/v3/polyfill.min.js?features=default,Array.prototype.includes,Array.prototype.find,Number.parseFloat%2CNumber.parse%2CNodeList.prototype.forEach%2CNumber.parseInt"></script>
    @Bundles.RenderScripts()

    @RenderSection("BottomScripts", required: false)
