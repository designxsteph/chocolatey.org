        @Html.Partial("~/Views/Shared/_Modals.cshtml")
        <section class="container py-3 py-md-5">
            <div class="row">
                <div class="col-sm-9 col-lg-6 m-auto">
                    <div class="card card-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </section>
    </main>
    <footer>
        @Html.Partial("~/Views/Shared/_CopyrightNavigation.cshtml")
    </footer>
