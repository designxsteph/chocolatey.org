    Layout = "_BaseLayout.cshtml";
}
@section css
{
    @RenderSection("css", required: false)
}
@section ExtraHeaders
{
    @RenderSection("ExtraHeaders", required: false)
}
@section TopScripts
{
    @RenderSection("TopScripts", required: false)
}

<body class="chocolatey-org">
    <script type="text/javascript" src="https://secure.make6pain.com/js/194108.js"></script>
    <noscript><img alt="" src="https://secure.make6pain.com/194108.png" style="display:none;" /></noscript>

    @Html.Partial("~/Views/Shared/_Loader.cshtml")
    @Html.Partial("~/Views/Shared/_TopNavigation.cshtml")
