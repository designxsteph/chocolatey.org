@using NuGetGallery;
@model SignInRequest
@{
    ViewBag.Title = "Log On";
    Layout = "~/Views/Shared/MinimalLayout.cshtml";
    Bundles.Reference("content/css/chocolatey.bundle.min.css");
    Bundles.Reference("Scripts/main");
    Bundles.Reference("Scripts/validation");
}
@section TopScripts {
    <script>
        function onSubmit(token) {
            document.getElementById("i-recaptcha").submit();
        }
    </script>
    <script src='https://www.google.com/recaptcha/api.js' async defer></script>
}

<h3 class="text-center">Chocolatey Community Login</h3>
<p class="text-center mb-0"><small>Don't have an account yet? <a href="@Url.Action(MVC.Users.Register())">Register now.</a></small></p>
<hr class="mb-0" />
@using (Html.BeginForm("LogOn", "Authentication", FormMethod.Post, new { id = "i-recaptcha" }))
{
    <fieldset class="form">
        <legend class="d-none">Log On Form</legend>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.Hidden("ReturnUrl", ViewData[Constants.ReturnUrlViewDataKey])
        @if (ViewBag.ConfirmationRequired != null && ViewBag.ConfirmationRequired)
        {
            <div class="callout callout-danger mt-3 shadow-none">
                <p>Before you can log on, you&#8217;ll need to confirm your account. When you registered, we sent you an email with a URL you can click to confirm your account. Please check your spam folder if you did not receive the confirmation email.</p>
                <p class="mb-0">@Html.ActionLink("Lost your confirmation email?", "ResendConfirmation", "Users")</p>
            </div>
        }
        <div class="mt-3">
            @Html.LabelFor(m => m.UserNameOrEmail) <span class="fas fa-asterisk text-primary small text-primary small"></span>
            @Html.TextBoxFor(m => m.UserNameOrEmail, new { @class = "form-control mt-2" })
            @Html.ValidationMessageFor(m => m.UserNameOrEmail)
        </div>
        <div class="mt-3">
            @Html.LabelFor(m => m.Password) <span class="fas fa-asterisk text-primary small text-primary small"></span>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control mt-2" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <p class="mb-0 mt-3"><small>Fields marked with</small> <span class="fas fa-asterisk text-primary small"></span> <small>are required.</small></p>
        <input class="btn btn-primary mx-auto mt-3 d-block g-recaptcha" data-sitekey="@System.Configuration.ConfigurationManager.AppSettings["reCAPTCHA::PublicKey"]" data-callback="onSubmit" data-badge="bottomleft" data-action="Form_LogOn" type="submit" value="Log In" title="Log In" />
	<p class="mb-0 mt-2 text-center"><small>@Html.ActionLink("Lost your Password?", "ForgotPassword", "Users")</small></p>
    </fieldset>
}     
@section BottomScripts {
    <script language="javascript" type="text/javascript">
        ((window.gitter = {}).chat = {}).options = {
            room: 'chocolatey/chocolatey.org'
        };
    </script>
    <script src="https://sidecar.gitter.im/dist/sidecar.v1.js" async defer></script>
}